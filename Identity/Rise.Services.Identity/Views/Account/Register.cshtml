@model Rise.Services.Identity.MainModule.Account.RegisterViewModel

@{
	var role_list = (List<string>?)ViewData["roles_message"];
}
<section class="banner-area organic-breadcrumb">
	<div class="container">
		<div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
			<div class="col-first">
				<h1>Login/Register</h1>
				<nav class="d-flex align-items-center">
					<a href="index.html">Home<span class="lnr lnr-arrow-right"></span></a>
					<a href="category.html">Login/Register</a>
				</nav>
			</div>
		</div>
	</div>
</section>


<section class="login_box_area section_gap">
	<div class="container">
		<div class="row">
			<div class="col-lg-6">
				<div class="login_box_img">
					<img class="img-fluid" src="~/img/login.jpg" alt="">
					<div class="hover">
						<h4>Are you  to our website?</h4>
						<p>There are advances being made in science and technology everyday, and a good example of this is the</p>
						@*<a class="primary-btn" href="@Url.Action("Login",new {Model.ReturnUrl })">Sign In Your Account</a>*@
					</div>
				</div>
			</div>
			<partial name="_ValidationSummary" />
			<div class="col-lg-6">
				<div class="login_form_inner">
					<div class="card-body">
						<form class="row login_form" asp-route="Login">
							<input type="hidden" asp-for="ReturnUrl" />
							<div class="col-md-12 form-group">
								<label asp-for="Username">Email</label>
								<input class="form-control" placeholder="Email" asp-for="Username" autofocus>
							</div>
							<div class="col-md-12 form-group">
								<label asp-for="Email">Confirm Email</label>
								<input class="form-control" placeholder="Confirm Email" asp-for="Email" autofocus>
							</div>
							<div class="col-md-12 form-group">
								<label asp-for="FirstName">First Name</label>
								<input class="form-control" placeholder="FirstName" asp-for="FirstName" autofocus>
							</div>
							<div class="col-md-12 form-group">
								<label asp-for="LastName">Last Name</label>
								<input class="form-control" placeholder="LastName" asp-for="LastName" autofocus>
							</div>
							<div class="col-md-12 form-group">
								<label asp-for="Password"></label>
								<input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
							</div>
							<div class="col-md-12 form-group">
								<label asp-for="ConfirmPassword">Confirm Password</label>

								<input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="ConfirmPassword">
							</div>
							<div class="col-md-12 form-group" hidden>
							<label asp-for="RoleName" hidden></label>
								<select asp-for="RoleName" class="form-control" asp-items="@(new SelectList(ViewBag.message))" hidden></select>
							</div>

							<div class="col-md-12 form-group">
								<button class="btn primary-btn" name="button" value="Register">Register</button>
							</div>
						</form>
					</div>
				</div>
			</div>


		</div>
	</div>
</section>
