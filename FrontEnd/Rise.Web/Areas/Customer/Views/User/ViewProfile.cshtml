@model Rise.Services.Identity.Models.ApplicationUser;
@{
	ViewData["Title"] = "ViewProfile";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="banner-area organic-breadcrumb">
	<div class="container">
		<div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
			<div class="col-first">
				<h1>Profile Page</h1>
				<nav class="d-flex align-items-center">
					<a href="index.html">Home</a>
				</nav>
			</div>
		</div>
	</div>
</section>



<div class="main-container">
	<section class="bg-white">
		<div class="container">

			<div class="row justify-content-center">
				<div class="col-12 col-md-8">
					<div class="card-body box-profile">
						<div class="text-center">
							<img class="profile-user-img img-fluid img-circle" src="../../dist/img/user4-128x128.jpg" alt="User profile picture">
						</div>

						<h3 class="profile-username text-center">@Model.FirstName @Model.LastName</h3>

						<p class="text-muted text-center">Software Engineer @Model.AboutMe</p>

						<ul class="list-group list-group-unbordered mb-3">
							<li class="list-group-item">
								<b>Mail Address</b> <a class="float-right">@Model.Email</a>
							</li>
							<li class="list-group-item">
								<b>Phone Number</b> <a class="float-right">@Model.PhoneNumber</a>
							</li>
							<li class="list-group-item">
								<b>User Name</b> <a class="float-right">@Model.UserName</a>
							</li>
							
							
						</ul>
					</div>
				</div>
				<!--end of col-->
			</div>
			<!--end of row-->
		</div>
		<!--end of container-->
	</section>
	<!--end of section-->
	<!--end of section-->
</div>
